@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confimação de Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Este aplicativo não tem atualmente um remetente de e-mail real registrado, consulte <a href="https://aka.ms/aspaccountconf">esse endereço</a> para configurar um remetente de e-mail real..
     Normalmente isso seria enviado por e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
</p>
    }
    else
    {
<p>
       Por favor, verifique seu e-mail para confirmar sua conta.
</p>
    }
}
